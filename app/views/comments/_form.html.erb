<% if @comment.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@comment.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>
 
    <ul>
    <% @comment.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for([@event, @event.comments.build]) do |f| %>
    <p>
        <%= f.text_area :content %>
    </p>
    <p><%= f.submit %></p>
<% end %>