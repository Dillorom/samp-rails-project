<h1> List of events</h1>

<% @events.each do |event| %>
    <%= link_to event_path(event) do %>
    <p><%= event.name %> on <%= event.time%> in <%= event.location  %> </p>
    <% end %>
<% end %>

<% if logged_in %>

    <p><%= link_to "Add an Event", new_event_path(@event) %></p>
    <p><%= link_to 'Log Out', logout_path(@user) %></p>
<% else %>
    <h2><%= link_to "Log In", login_path %> </h2>
<% end %>

