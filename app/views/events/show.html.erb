<h1>You are viewing <%= @event.name%> event</h1>
<p>What: <%= @event.name %></p>
<p>When: <%= @event.time %><p>
<p>Where: <%= @event.location %></p>
<p>Details: <%= @event.details %></p>
<p>Further info: <%= @event.url %></p>
<p><% @event.image %></p>

<p>Only admin should see these buttons:</p>

<% if logged_in && @user == current_user %>
    <p><%= link_to 'Edit', edit_event_path(@event) %> <%= link_to "Delete", @event, method: :delete, data: { confirm: "Really?" } %></p>
<% end %>
<p><%= link_to 'Edit', edit_event_path(@event) %> <%= link_to "Delete", @event, method: :delete, data: { confirm: "Really?" } %></p>

<h3>What people say about the event?</h3>
<table>
    <% @event.comments.each do |comment|%>
        <th><%= comment.user.username %> says:</th>
        <tr>
            <td> 
                <%= comment.content %>
                <% if logged_in %>
                    <% if comment.user_id == current_user.id %>
                    <p>
                        <%= link_to "Edit", edit_event_comment_path(@event, comment)%> 

                        <%= link_to "Delete", event_comment_path(@event, comment), method: :delete, data: { confirm: "Are you sure?" } %>
                    </p>
                    <% end %>
                <% end %>
            </td>
         </tr>
    <% end %>
 </table>
<h4><%= flash[:notice] %><h4>
<% if logged_in %>
    <p>Aks question or give advice</p>
        <%= render 'comments/form' %>
 <% else %>
    <p><%= link_to "Log in", login_path %> to comment </p>
<% end %>

