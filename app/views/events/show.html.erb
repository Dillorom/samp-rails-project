<h1>You are viewing <%= @event.name%> event</h1>
<p>What: <%= @event.name %></p>
<p>When: <%= @event.time %><p>
<p>Where: <%= @event.location %></p>
<p>Details: <%= @event.details %></p>
<p>Further info: <%= @event.url %></p>
<p><% @event.image %></p>
<p><%= link_to 'Edit', edit_event_path(@event) %></p>
<p><%= link_to "Delete", @event, method: :delete, data: { confirm: "Really?" } %></p>

<h2>Comments</h2>
<ul>
    <% @event.comments.each do |comment|%>
        <li><%= comment.user.username %> says: <%= comment.content %></li>
        <% end %>
</ul>


<% if logged_in %>
    <h2>Add a Comment</h2>
    <%= form_for([@event, @event.comments.build]) do |f| %>
        <p>
            <%= f.text_area :content %>
        </p>
        <p><%= f.submit %></p>
        <p><%= link_to "Add an Event", new_event_path(@event) %></p>
        <p><%= link_to 'Log Out', logout_path(@user) %></p>
    <% end %>
<% else %>
    <h2><%= link_to "Log in", login_path %> to comment </h2>
<% end %>

