<h1>You are viewing <%= @event.name%> event</h1>
<p>What: <%= @event.name %></p>
<p>When: <%= @event.time %><p>
<p>Where: <%= @event.location %></p>
<p>Details: <%= @event.details %></p>
<p>Further info: <%= @event.url %></p>
<p><% @event.image %></p>
<% if logged_in && @user == current_user %>
    <p><%= link_to 'Edit', edit_event_path(@event) %> <%= link_to "Delete", @event, method: :delete, data: { confirm: "Really?" } %></p>
<% end %>
<p><%= link_to 'Edit', edit_event_path(@event) %> <%= link_to "Delete", @event, method: :delete, data: { confirm: "Really?" } %></p>

<h2>Comments</h2>
<ul>
    <% @event.comments.each do |comment|%>
        <li><%= comment.user.username %> says: <%= comment.content %></li>
        <% end %>
</ul>

<%= flash[:notice]%>
<% if logged_in %>
    <h2>Add a Comment</h2>
        <%= render 'comment_form' %>
       
        <p><%= link_to "Add an Event", new_event_path(@event) %> <%= link_to 'Log Out', logout_path(@user) %></p>
<% else %>
    <h2><%= link_to "Log in", login_path %> to comment </h2>
<% end %>

