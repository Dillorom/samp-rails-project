<ol>
    <% @event.rsvps.each do |rsvp|%>
        <li>
            <%= link_to rsvp.user.username, user_path(current_user) %> 
            <% if logged_in %>
                <% if rsvp.user_id == current_user.id || current_user.admin %>
                    <%= link_to "Edit your response", edit_event_rsvp_path(@event, rsvp)%>
                <% end %>
            <% end %>
        </li>
    <% end %>
</ol>
