<h1><%= @user.username %>'s profile </h1>
<% if current_user %>
    <p> Your email: <%= @user.email %></p>
<% end %>
<% if logged_in && @user == current_user %>
    <p>
    <%= link_to 'Edit', edit_user_path(@user) %>
    <%= form_tag user_path(@user.id), method: "delete" do %>
        <%= submit_tag "Delete #{@user.username}" %>
    <% end %>
    </p>
<% elsif logged_in && current_user.admin %>
    <p>
    <%= link_to 'Edit', edit_user_path(@user) %>
    <%= form_tag user_path(@user.id), method: "delete" do %>
        <%= submit_tag "Delete #{@user.username}" %>
    <% end %>
    </p>
<% end %>

<% if @user.attending_events.size == 0 %>
   <h2>Your are not attending any events</h2>
  <% else @user.attending_events.size > 0 %>
   <%= link_to "Attending events: ", user_path(@user), :id => "load_rsvps" %>
<% end %>
<div id="attending_events">
        <ul></ul>
</div>






            

